<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.v.cobacobautsmobile.LaporanDetailPembelian">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp">
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:text="ID"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:text=":"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txt_lap_id"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:text="-"
                    />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:text="Tanggal"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:text=":"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txt_lap_date"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:text="-"
                    />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:text="Supplier"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:text=":"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txt_lap_supp"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:text="-"
                    />
            </TableRow>
        </TableLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#000"
            />
        <TableLayout
            android:id="@+id/tbl_det_trans"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:text="No"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:text="Barang"
                    android:textStyle="bold"
                    />
                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:text="Jumlah"
                    android:textStyle="bold"
                    />
                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:text="Harga"
                    android:textStyle="bold"
                    />
                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:text="Total"
                    android:textStyle="bold"
                    />
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                />
        </TableLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="80dip"
                    android:paddingRight="50dip"
                    android:text="Total"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:text=":"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txt_grandtotal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:text="Rp. 0"
                    />
            </TableRow>

        </TableLayout>
    </LinearLayout>
</ScrollView>
